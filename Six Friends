/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc= new Scanner(System.in);
		int n=sc.nextInt();
		while(n-->0){
		    int total_friends=6;
		    int double_room=3;
		    int triple=2;
		    int X=sc.nextInt();
		    int Y=sc.nextInt();
		    int totalX=double_room*X;
		    int totalY=triple*Y;
		    if(totalX<totalY){
		        System.out.println(totalX);
		    }
		    else{
		        System.out.println(totalY);
		    }
		}
	}
}
